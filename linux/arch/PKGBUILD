# PKGBUILD for bacon
# Nathan Forbes

pkgname=bacon
pkgver=0.20.3
pkgrel=1
pkgdesc="Tool for downloading CyanogenMod ROMs for Android devices"
arch=('i686' 'x86_64')
url="http://github.com/natediddy/${pkgname}"
license=('GPL3')
depends=('curl')
optdepends=()
makedepends=()
conflicts=()
replaces=()
backup=()
#install=
source=(https://github.com/downloads/natediddy/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('71de060dd17918785fc7b8ef2d0354f1')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
  install -Dm644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
}
